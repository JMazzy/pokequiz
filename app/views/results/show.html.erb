    <div class="container">
      <h1 class="text-center">You were <%= user_presenter.question_right(@result.result) %></h1>
      <div class="row">

        <div class="col-xs-8 col-xs-offset-2">
          Success/Failure Picture Here
        </div>

      </div>
      <div class="row">

        <div class="col-xs-4 col-xs-offset-2">
          <%= link_to "Next Question", new_result_path, class: 'btn btn-warning btn-lg btn-block' %>
        </div>

        <div class="col-xs-4">
          <%= link_to "Back to Dashboard", user_path(current_user), class: 'btn btn-default btn-lg btn-block' %>
<% end %>
</div>

</div>
</div>
