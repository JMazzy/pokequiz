<section class="row">
  <section class="col-md-4">

    <%= render partial: "activities/activity", locals: { activities: @activities } %>

  </section>
  <section class="col-md-8">

    <%= render partial: "users/leaderboard", locals: { users: @users } %>

    <%= render partial: "users/user_stats", locals: { user: current_user } %>

    <%= render partial: "questions/question_stats", locals: { question: @questions } %>

  </section>
</section>

<%= form_tag searches_path, method: 'post' do %>
  <%= label_tag "query", "Find by email" %>
  <%= text_field_tag "query" %>
  <%= submit_tag "Search" %>
<% end %>